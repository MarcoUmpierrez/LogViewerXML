<div class="header">
    <input multiple="false" type="file" name="file" onchange={{action "upload"}} accept="log" />
</div>

<div class="menu">
    <input class="menu-search" type="text" name="search" onkeyup={{action "search"}}>
    <div class="menu-level">        
        <label class="debug" for="debug"><input type="checkbox" name="debug" value="debug" onclick={{action "disableLevel"}} checked> Debug</label>
        <label class="info" for="info"><input type="checkbox" name="info" value="info" onclick={{action "disableLevel"}} checked> Info</label>
        <label class="warning" for="warning"><input type="checkbox" name="warning" value="warning" onclick={{action "disableLevel"}} checked> Warning</label>
        <label class="error" for="error"><input type="checkbox" name="error" value="error" onclick={{action "disableLevel"}} checked> Error</label>
    </div>
</div>

<div>
    {{#each filteredModel as |item|}}
        {{log-row model=item}}
    {{/each}}
</div>